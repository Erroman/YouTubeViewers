<Window x:Class="YouTubeViewers.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:modalcontrol="clr-namespace:ModalControl;assembly=ModalControl"
        Title="YouTube Viewers"
        Height="450" 
        Width="800"
        FontSize="14"
        xmlns:local="clr-namespace:YouTubeViewers.WPF"
        xmlns:views="clr-namespace:YouTubeViewers.WPF.Views"
        mc:Ignorable="d"
        >
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid >
            <modalcontrol:Modal IsOpen="{Binding IsModalOpen}">
                <ContentControl Content="{Binding CurrentModelViewModel}"/>
            </modalcontrol:Modal>
            <views:YouTubeViewersView Margin="25" DataContext="{Binding YouTubeViewersViewModel}"/>
        </Grid>
    </ScrollViewer>
</Window>
